<!-- main section -->
<div class="container">
    <div class="row d-flex justify-content-center align-items-center vh-100">
        <div class="col-12">
            <h1 class="col-sm-12 p-0 title-text">Marvel Search Engine</h1>
            <div class="shadow-lg p-3 mb-5 bg-white rounded">
                <form id="search-form">
                    <div class="form-group input-group-lg">
                        <input class="form-control" type="search" name="search-item" id="search-item"
                            placeholder="Search..." aria-label="Search">
                    </div>

                    <button class="btn btn-lg btn-danger search-btn" type="submit">Search</button>

                    <button class="btn btn-lg btn-danger search-btn" type="button" disabled>
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        Loading...
                    </button>

                </form>
            </div>
            <div class="d-flex justify-content-center">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <a href="/characters" class="btn btn-lg btn-danger" type="button">Characters</a>
                    <a href="/comics" class="btn btn-lg btn-danger" type="button">Comics</a>
                    <a href="/creators" class="btn btn-lg btn-danger" type="button">Creators</a>
                </div>
            </div>

        </div>
    </div>
</div>
